<div class="container">
  <div class="jumbotron">
    <div class="page-header">
      <h1>Sign In</h1>
    </div>
    <div class="form-horizontal">
      <%= form_tag url: sign_in_path do |f| %>

        <div class="form-group">
          <%= label_tag :email, "Email", class: "col-md-3 control-label" %>
          <div class="col-md-9">
            <%= email_field_tag :email, "", class: "form-control" %>
          </div>
        </div>

        <div class="form-group">
          <%= label_tag :password, "Password", class: "col-md-3 control-label" %>
          <div class="col-md-9">
            <%= password_field_tag :password, "", class: "form-control" %>
          </div>
        </div>

        <div class="form-group">
          <div class="col-md-offset-3 col-md-9">
            <%= submit_tag "Sign In", class: "btn btn-primary btn-large form-control" %>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>
